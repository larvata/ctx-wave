{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "default_locale": "zh_CN",

  "description": "__MSG_extension_description__",

  "icons": {
    "16": "icons/app-icon-16.png",
    "48": "icons/app-icon-48.png",
    "64": "icons/app-icon-64.png",
    "128": "icons/app-icon-128.png"
